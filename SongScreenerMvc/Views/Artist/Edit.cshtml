@model SongScreenerMvc.Models.Entity.Artist

@{
    ViewBag.Title = "Edit";
}

<h2>编辑歌手</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>歌手</legend>

        @Html.HiddenFor(model => model.ArtistID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ArtistName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ArtistName,"歌手名")
            @Html.ValidationMessageFor(model => model.ArtistName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ArtistGender, "性别")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ArtistGender", String.Empty)
            @Html.ValidationMessageFor(model => model.ArtistGender)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ArtistHometown, "类别")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ArtistHometown", String.Empty)
            @Html.ValidationMessageFor(model => model.ArtistHometown)
        </div>

        <p>
            <input type="submit" value="保存" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("返回歌手列表", "Index")
</div>
