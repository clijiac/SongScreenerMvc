@model IEnumerable<SongScreenerMvc.Models.Song>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            SongName
        </th>
        <th>
            Artist
        </th>
        <th>
            Language
        </th>
        <th>
            Genre
        </th>
        <th>
            Intonation
        </th>
        <th>
            Tone
        </th>
        <th>
            Rhythm
        </th>
        <th>
            SongPath
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SongName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.ArtistName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language.LanguageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.GenreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Intonation.IntonationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tone.ToneName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rhythm.RhythmName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SongPath)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SongID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SongID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SongID })
        </td>
    </tr>
}

</table>
